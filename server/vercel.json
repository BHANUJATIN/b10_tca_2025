{
  "version": 2,

  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "index.js" }
  ],
  "crons": [
    {
      "path": "/cron/poll",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/cron/send",
      "schedule": "*/15 * * * *"
    }
  ]
}
